{
  "dataset": [
    {
      "name": "drugbank",
      "smi_transf": "dgl",
      "dt_transf": "dgl"
    }
  ],
  "arch": [
    {
      "net": "druud",
      "params": {
        "drug_feature_extractor": {
          "net": "dglgraph",
          "params": {
            "input_dim":100,
            "conv_layer_dims": [128]
          },
          "fc_layers_dim": [1000]
        }
      },
      "init_fn": null
    }
  ],
  "loss_function": [
    "bce"
  ],
  "optimizer": [
    {
      "optim": "adam",
      "params": {
        "lr": 0.0001,
        "weight_decay": 0
      }
    }
  ],
  "train_params": [
    {
      "n_epochs": 1,
      "batch_size": 32,
      "early_stopping": true,
      "reduce_lr": true
    }
  ]
}

