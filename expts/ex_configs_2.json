{
  "dataset": [
    {
      "name": "drugbank",
      "smi_transf": "seq",
      "dt_transf": "common"
    }
  ],
  "arch": [
    {
      "net": "druud",
      "params": {
        "drug_feature_extractor": {
          "net": "conv1d",
          "params": {
            "vocab_size": 150,
            "embedding_size": 20,
            "cnn_sizes": [
              128
            ],
            "kernel_size": 3,
            "dropout": 0.0,
            "pooling": "max",
            "b_norm": true,
            "pooling_len": 2,
            "normalize_features": true
          }},
          "fc_layers_dim": [1000]
      },
      "init_fn": null
    }
  ],
  "loss_function": [
    "bce"
  ],
  "optimizer": [
    {
      "optim": "adam",
      "params": {
        "lr": 0.0001,
        "weight_decay": 0
      }
    }
  ],
  "train_params": [
    {
      "n_epochs": 1,
      "batch_size": 32,
      "early_stopping": true,
      "reduce_lr": true
    }
  ]
}

